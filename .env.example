# Root .env (for Docker)
# Location: /.env
# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# # AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=your_aws_region_here
AWS_BUCKET_NAME=your_bucket_name_here

# Database Configuration
POSTGRES_USER=youruser
POSTGRES_PASSWORD=yourpassword
POSTGRES_DB=photo_contest_db
POSTGRES_HOST=db  # Important: must be 'db' for Docker networking to work

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://127.0.0.1,http://127.0.0.1:80
VITE_API_URL=http://localhost:3000

ADMIN_USER_ID=youruserid

# SMTP Configuration (Email reporting)
SMTP_HOST=smtp.host.com
SMTP_PORT=000
SMTP_SECURE=true
SMTP_USER=email@address.com
SMTP_PASSWORD=password
SMTP_FROM=email@address.com
FRONTEND_URL=http://localhost:80